{
  "name": "drift-guardian",
  "version": "0.2.0",
  "description": "GitHub Action to detect drift between code, docs, and business rules",
  "main": "src/index.js",
  "bin": {
    "drift-guardian": "src/cli.js"
  },
  "license": "MIT",
  "private": false,
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "lint": "eslint src/ test/",
    "lint:fix": "eslint src/ test/ --fix",
    "typecheck": "tsc --noEmit",
    "test": "node --test",
    "test:coverage": "node --test --experimental-test-coverage",
    "benchmark": "node test/benchmark.js",
    "validate": "npm run lint && npm typecheck && npm test"
  },
  "devDependencies": {
    "@types/node": "^25.0.6",
    "eslint": "^8.57.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "github-action",
    "documentation",
    "drift-detection",
    "code-quality",
    "ci-cd",
    "policy-enforcement",
    "llm",
    "static-analysis"
  ]
}
